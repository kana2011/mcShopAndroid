<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="xyz.paphonb.mcshop.ScrollingActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="xyz.paphonb.mcshop.shop.ShopDetailActivity">

        <Button
            android:id="@+id/buy_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/get"
            android:textColor="@color/md_white_1000"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin" android:text="@string/large_text" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>