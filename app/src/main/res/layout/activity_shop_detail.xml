<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kana2011.mcshop.shop.ShopDetailActivity">

    <ImageView
        android:id="@+id/item_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_material"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:id="@+id/tint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_top_padding"
        android:layout_alignParentTop="true"
        android:background="#50000000"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dropshadow"
        android:layout_below="@id/tint"
        app:theme="@style/McShopToolbarTheme"
        app:popupTheme="@style/McShopToolbarPopupTheme">

    </android.support.v7.widget.Toolbar>

</RelativeLayout>
